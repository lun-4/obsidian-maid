{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "scripthost",
      "es2015",
      "es2020.string"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
